<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_top_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/main_nav_bar"
        android:gravity="center|clip_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_horizontal"
            android:text="Tower Power"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_horizontal"
            android:text="Location Based Android Game"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/divider_1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:srcCompat="?attr/dividerHorizontal" />

    <ImageView
        android:id="@+id/collect_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|center"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/collect_icon" />

    <TextView
        android:id="@+id/collect_text"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal|center"
        android:fontFamily="sans-serif-smallcaps"
        android:scaleType="fitCenter"
        android:text="Collect"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/divider_2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="?attr/dividerHorizontal" />

    <ImageView
        android:id="@+id/destroy_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|center"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/destroy" />

    <TextView
        android:id="@+id/destroy_text"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal|center"
        android:fontFamily="sans-serif-smallcaps"
        android:scaleType="fitCenter"
        android:text="Destroy"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/divider_3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="?attr/dividerHorizontal" />

    <ImageView
        android:id="@+id/defend_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|center"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/defend" />

    <TextView
        android:id="@+id/defend_text"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal|center"
        android:fontFamily="sans-serif-smallcaps"
        android:scaleType="fitCenter"
        android:text="Defend"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/divider_4"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        app:srcCompat="?attr/dividerHorizontal" />

    <TextView
        android:id="@+id/group_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|center"
        android:fontFamily="sans-serif-smallcaps"
        android:scaleType="fitCenter"
        android:text="Group 5 - Trinity College Dublin"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:typeface="sans" />

</LinearLayout>

