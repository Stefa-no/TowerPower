<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adwitiya.cs7cs3.towerpower">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FirebaseLogin"
            android:label="Account"
            android:theme="@style/AppTheme.Fullscreen" />
        <activity android:name=".activities.EmailPasswordActivity" />
        <activity android:name=".activities.GoogleSignInActivity" />
        <activity
            android:name=".activities.LiveMaps"
            android:label="@string/livemaps_header"
            android:theme="@style/AppTheme.Fullscreen" />
        <activity
            android:name=".activities.GameSearch"
            android:label="@string/game_page"
            android:theme="@style/AppTheme.Fullscreen" />
        <activity
            android:name=".activities.ToolsActivity"
            android:label="@string/tools_act"
            android:theme="@style/AppTheme.Fullscreen" />
        <activity
            android:name=".activities.ChatActivity"
            android:label ="@string/chat_header"
            android:theme="@style/AppTheme.Fullscreen">
        </activity>
    </application>

</manifest>